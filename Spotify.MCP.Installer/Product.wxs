<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="Spotify MCP Server" 
           Language="1033" 
           Version="1.0.0.0" 
           Manufacturer="Spotify MCP" 
           UpgradeCode="12345678-1234-1234-1234-123456789012">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perMachine" 
             Description="Spotify Model Context Protocol Server"
             Comments="Provides MCP tools for interacting with the Spotify Web API" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <!-- .NET 9.0 Runtime requirement -->
    <PropertyRef Id="NETFRAMEWORK90FULL"/>
    <Condition Message="This application requires .NET 9.0 Runtime. Please install .NET 9.0 Runtime from https://dotnet.microsoft.com/download">
      <![CDATA[Installed OR NETFRAMEWORK90FULL]]>
    </Condition>

    <!-- Installation directory -->
    <Feature Id="ProductFeature" Title="Spotify MCP Server" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="ConfigurationComponents" />
    </Feature>

    <!-- Custom actions for Claude Desktop configuration -->
    <Binary Id="CustomActionBinary" SourceFile="$(var.Spotify.MCP.Host.TargetDir)Spotify.MCP.Host.exe" />
    
    <CustomAction Id="ConfigureClaudeDesktop" 
                  BinaryKey="CustomActionBinary" 
                  Execute="deferred" 
                  Return="check" 
                  Impersonate="no" />

    <!-- Install sequence -->
    <InstallExecuteSequence>
      <Custom Action="ConfigureClaudeDesktop" After="InstallFiles">NOT Installed</Custom>
    </InstallExecuteSequence>
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="Spotify MCP Server">
          <Directory Id="ConfigFolder" Name="Config" />
        </Directory>
      </Directory>
      
      <!-- Start Menu -->
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="Spotify MCP Server"/>
      </Directory>
    </Directory>
  </Fragment>

  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- Main executable -->
      <Component Id="MainExecutable" Guid="*">
        <File Id="SpotifyMCPHostExe" 
              Source="$(var.Spotify.MCP.Host.TargetPath)" 
              KeyPath="yes" 
              Checksum="yes"/>
      </Component>

      <!-- Dependencies -->
      <Component Id="Dependencies" Guid="*">
        <File Id="AppSettingsJson" 
              Source="$(var.Spotify.MCP.Host.TargetDir)appsettings.json" 
              KeyPath="yes"/>
        <File Id="ModelContextProtocolDll" 
              Source="$(var.Spotify.MCP.Host.TargetDir)ModelContextProtocol.dll"/>
        <File Id="MicrosoftExtensionsHostingDll" 
              Source="$(var.Spotify.MCP.Host.TargetDir)Microsoft.Extensions.Hosting.dll"/>
        <File Id="MicrosoftExtensionsHttpDll" 
              Source="$(var.Spotify.MCP.Host.TargetDir)Microsoft.Extensions.Http.dll"/>
        <File Id="MicrosoftExtensionsConfigurationDll" 
              Source="$(var.Spotify.MCP.Host.TargetDir)Microsoft.Extensions.Configuration.dll"/>
        <File Id="SystemTextJsonDll" 
              Source="$(var.Spotify.MCP.Host.TargetDir)System.Text.Json.dll"/>
      </Component>

      <!-- Runtime config -->
      <Component Id="RuntimeConfig" Guid="*">
        <File Id="RuntimeConfigJson" 
              Source="$(var.Spotify.MCP.Host.TargetDir)Spotify.MCP.Host.runtimeconfig.json" 
              KeyPath="yes"/>
        <File Id="DepsJson" 
              Source="$(var.Spotify.MCP.Host.TargetDir)Spotify.MCP.Host.deps.json"/>
      </Component>
    </ComponentGroup>
  </Fragment>

  <Fragment>
    <ComponentGroup Id="ConfigurationComponents" Directory="ConfigFolder">
      <!-- Sample configuration files -->
      <Component Id="SampleConfig" Guid="*">
        <File Id="SampleAppSettings" 
              Source="SampleConfig\appsettings.sample.json" 
              Name="appsettings.sample.json"
              KeyPath="yes"/>
        <File Id="ClaudeConfigSample" 
              Source="SampleConfig\claude_desktop_config.sample.json" 
              Name="claude_desktop_config.sample.json"/>
        <File Id="ReadmeFile" 
              Source="$(var.Spotify.MCP.Host.ProjectDir)README.md" 
              Name="README.md"/>
      </Component>
    </ComponentGroup>
  </Fragment>

  <!-- Start Menu shortcuts -->
  <Fragment>
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut" Guid="*">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="Spotify MCP Server Configuration"
                  Description="Configure Spotify MCP Server settings"
                  Target="[INSTALLFOLDER]Config\README.md"
                  WorkingDirectory="INSTALLFOLDER"/>
        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" 
                      Key="Software\Microsoft\SpotifyMCPServer" 
                      Name="installed" 
                      Type="integer" 
                      Value="1" 
                      KeyPath="yes"/>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>